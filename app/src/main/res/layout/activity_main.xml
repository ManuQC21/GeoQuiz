<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonVerdadero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_verdadero"/>
        <Button
            android:id="@+id/botonFalso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_falso"/>

    </LinearLayout>

    <!-- Botón para hacer trampa (vertical) -->
    <Button
        android:id="@+id/botonHacerTrampa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_trampa"
        android:layout_gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Botón Siguiente -->
        <Button
            android:id="@+id/botonSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_siguiente"
            android:drawableRight="@drawable/siguiente" />

    </LinearLayout>
</LinearLayout>
